<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bang_ding_yin_hang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    android:background="#333"
    tools:context="com.zhuye.hougong.view.BangDingYinHangActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/home_color"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/bangding_yinhang_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back"/>
        <TextView
            android:id="@+id/mywalot_qianbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:text="银行卡"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <ImageView
        android:src="@drawable/bank_1"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="352dp"
        android:layout_height="112dp" />
    <ImageView
        android:src="@drawable/bank_2"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="352dp"
        android:layout_height="112dp" />
    <ImageView
        android:src="@drawable/bank_3"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="352dp"
        android:layout_height="112dp" />
    <ImageView
        android:src="@drawable/bank_4"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="352dp"
        android:layout_height="112dp" />
    <TextView
        android:background="@color/white"
        android:drawablePadding="11dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/add_1"
        android:textSize="@dimen/sp_16"
        android:textColor="#666"
        android:text="添加银行卡"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="352dp"
        android:layout_height="52dp" />

</LinearLayout>
