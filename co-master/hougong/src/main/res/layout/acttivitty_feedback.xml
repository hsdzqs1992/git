<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/home_color"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/person_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back"/>


        <TextView
            android:id="@+id/mywalot_qianbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:text="反馈意见"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <EditText
        android:textColorHint="#aaa"
        android:textSize="16sp"
        android:background="@drawable/feedback_bg"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:gravity="start"
        android:id="@+id/feed_content"
        android:hint="请输入你想提交的意见，"
        android:layout_width="match_parent"
        android:layout_height="305dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="58dp">

            <Button
                android:background="#f1ba27"
                android:textColor="#fff"
                android:id="@+id/feed_kefu"
                android:textSize="19sp"
                android:text="联系客服"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:background="#f54b49"
                android:textColor="#fff"
                android:id="@+id/feed_yijian"
                android:textSize="19sp"
                android:text="提交意见"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
