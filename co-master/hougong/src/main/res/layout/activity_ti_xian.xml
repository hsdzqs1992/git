<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ti_xian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhuye.hougong.view.TiXianActivity">


    <RelativeLayout
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/mywalot_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>

        <TextView
            android:layout_centerInParent="true"
            android:text="提现"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:id="@+id/mywalot_qianbao"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp"
       android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#666"
                android:textSize="14sp"
                android:text="提现账号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingRight="15dp"
                android:textColor="#666"
                android:textSize="14sp"
                android:id="@+id/tixian_yinhang"
                android:layout_alignParentRight="true"
                android:text="工行储蓄卡(0933)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:textColor="#666"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:text="提现金额"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:background="@null"
                android:textColor="#666"
                android:layout_marginTop="20dp"
                android:textSize="14sp"
                android:text="¥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:textColor="#666"
                android:id="@+id/jine"
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                android:text="250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#666"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:text="可提现金额250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/quanbu"
                android:textColor="#f16fd8"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:text="全部提现"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:textSize="16sp"
            android:textColor="#fff"
            android:id="@+id/tixian"
            android:background="#f75152"
            android:text="立即提现"
            android:layout_marginTop="97dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>